      <section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                
              </h1> 
              <p class="text-white link-nav"><%= link_to 'Home', root_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to 'Grade Submission', edit_instructor_assignment_mark_path(@assignment_mark) %></p>
            </div>  
          </div>
        </div>
      </section>
      <!-- End banner Area -->

<!-- Start course-details Area -->
      <section class="course-details-area pt-120">
        <div class="container">
          <div class="row">
          	<div class="col-md-4">
          		<% if notice %>
	                <div class="alert alert-success text-center" role="alert"><%= notice %></div>
	            <% end %>
	            <% if alert %>
	                <div class="alert alert-danger text-center" role="alert"><%= alert %></div>
	            <% end %>
	           
	            <h1>Grade Submission</h1>
	            <%= form_with(model: @assignment_mark, url: instructor_assignment_mark_path(params[:id]), local: true) do |form| %>
				<% if @assignment_mark.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@assignment_mark.errors.count, "error") %> prohibited this assignment from being saved:</h2>

                    <ul>
                    <% @assignment_mark.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

              <h4 class="mt-10 mb-10">Submitted File(s):</h4>  
              <div class="form-group ">
                <% @assignment_mark.file.each do |file| %>
                	<p><%= link_to File.basename(file.url), file.url %></p>
                <% end %>
              </div>

              <div class="form-group ">
                <%= form.label :total_score %>
                <%= form.number_field :total_score, autofocus: true, required: true, min: 1, max: 100, class: "form-control", placeholder: "Input Score" %>
                <%= @assignment_mark.assignment.total_score %>
              </div>

              <div class="row">
                <div class="col-md-4">
                  <%= link_to 'Back', courses_path, class: "btn btn-secondary" %>
                </div>
                <div class="col-md-4">
                  <%= form.submit "Confirm", class: "btn btn-primary" %>
                </div>
              </div>
				<% end %>

          	</div>
          </div>
        </div>  
  
      </section>
      <!-- End course-details Area -->
      

