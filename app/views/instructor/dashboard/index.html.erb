<section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                Instructor Panel
              </h1> 
              <p class="text-white link-nav"> <%= link_to "Home", root_path %> <span class="lnr lnr-arrow-right"></span> <%= link_to "Intructor Panel", instructor_root_path %> </p>
            </div>  
          </div>
        </div>
      </section>

      <!-- Start popular-course Area -->
      <section class="popular-course-area section-gap">
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
              <div class="title text-center">
                <h1 class="mb-10">My Course</h1>
                <p>There is a moment in the life of any aspiring.</p>
                <% if alert %>
                <div class="alert alert-danger" role="alert"><%= alert %></div>
              <% end %>
              </div>
              <div class="col-md-12 text-center">
              	<%= link_to "Create Course", new_instructor_course_path, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
          <% @course.each do |course| %>            
         <div class="row">
         	<div class="col-md-12">
	            <div class="section-top-border">
				<h3 class="mb-30"><%= link_to course.title, instructor_course_path(course) %></h3>
					<div class="row">
						<div class="col-md-3">
							<%= image_tag('elements/d.jpg', class: "img-fluid") %>
						</div>
						<div class="col-md-9 mt-sm-20 left-align-p">
							<p><%= course.description %></p>
						</div>
					</div>
				</div>
			</div>
        </div>
        <% end %>  
      </section>
      <!-- End banner Area -->