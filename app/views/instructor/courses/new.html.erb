      <!-- start banner Area -->
      <section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                Create Courses   
              </h1> 
              <p class="text-white link-nav"><%= link_to 'Home', root_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to 'Create Courses', new_course_path %></p>
            </div>  
          </div>
        </div>
      </section>  
      <!-- End banner Area -->

<!-- Start course-details Area -->
      <section class="section-top-border pt-100">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <%= render 'layouts/messages' %>
              <h2>Create Course</h2>

              
              <%= form_with(model: course, url: instructor_courses_path, local: true) do |form| %>

              <% if @course.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

                    <ul>
                    <% @course.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

              <div class="form-group ">
                <%= form.label :title %>
                <%= form.text_field :title, autofocus: true, required: true, class: "form-control", placeholder: "Course Name" %>
              </div>

              <div class="form-group ">
                <%= form.label :description %>
                <%= form.text_field :description, autofocus: true, required: true, class: "form-control", placeholder: "Description" %>
              </div>

              <div class="form-group ">
                <%= form.label :picture %>
                <%= form.file_field :picture, autofocus: true, required: true, class: "form-control" %>
              </div>

              <div class="form-group ">
                <%= form.label :college_id, class: "control-label requiredField" %>
                <%= form.collection_select(:college_id, current_user.colleges, :id, :name, {}, {class: "select form-control"}) %>
              </div>

              <div class="form-group form-check">
                <%= form.check_box :published, class: "form-check-input" %>
                <%= form.label :published, 'Publish Course?',class: "form-check-label" %>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <%= link_to 'Back', courses_path, class: "btn btn-secondary" %>
                </div>
                <div class="col-md-4">
                  <%= form.submit "Confirm", class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>  
      </section>
      <!-- End course-details Area -->
      

      <!-- Start popular-courses Area --> 
      <section class="popular-courses-area section-gap courses-page">
