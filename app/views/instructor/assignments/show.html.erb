      <!-- start banner Area -->
      <section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                <%= @assignment.title %>
              </h1> 
              <p class="text-white link-nav"><%= link_to 'Home', root_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to @assignment.title, instructor_assignment_path(@assignment) %></p>
            </div>  
          </div>
        </div>
      </section>
      <!-- End banner Area -->

<!-- Start course-details Area -->
      <section class="course-details-area pt-120">
        <div class="container">
          <div class="row">
          	<div class="col-lg-12">
          		<% if notice %>
	                <div class="alert alert-success text-center" role="alert"><%= notice %></div>
	            <% end %>
	            <% if alert %>
	                <div class="alert alert-danger text-center" role="alert"><%= alert %></div>
	            <% end %>
	           
	            <h1><%= @assignment.title %></h1>
	            <% @assignment.assignment_file.each do |file| %>
                <p><span class="fa fa-file"></span> <%= link_to File.basename(file.url), file.url %></p>
              <% end %>

            <div class="section-top-border">
            <h3 class="mb-30">Submission</h3>
            <div class="progress-table-wrap">
              <div class="progress-table">
                <div class="table-head">
                  <div class="serial">#</div>
                  <div class="country">User</div>
                  <div class="visit">File</div>
                  <div class="serial">Marks</div>
                  <div class="serial">Action</div>
                </div>
                <% @submission.each do |submit| %>
                <div class="table-row">
                  <div class="serial">01</div>
                  <div class="country"><%= submit.user.email %></div>
                  <% submit.file.each do |file| %>
                    <div class="visit"><%= link_to File.basename(file.url), file.url %></div>
                  <% end %>
                  <div class="serial">
                    <% if submit.marks.present? %>
                      <%= submit.marks %>
                      <% else %>
                      Submitted for grading
                    <% end %>
                  </div>
                  <div class="serial">
                    <%= link_to "Grade Submission", edit_instructor_assignment_mark_path(submit), class: "btn btn-primary" %>
                  </div>
                </div>
                <% end %>
            </div>
          </div>

          	</div>
          </div>
        </div>  
  
      </section>
      <!-- End course-details Area -->
      

      <!-- Start popular-courses Area --> 
      <section class="popular-courses-area section-gap courses-page">
      </section>
      <!-- End popular-courses Area -->         

      <!-- Start cta-two Area -->
      <section class="cta-two-area">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 cta-left">
              <h1>Not Yet Satisfied with our Trend?</h1>
            </div>
            <div class="col-lg-4 cta-right">
              <a class="primary-btn wh" href="#">view our blog</a>
            </div>
          </div>
        </div>  
      </section>
      <!-- End cta-two Area -->                     
