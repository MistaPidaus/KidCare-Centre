      <!-- start banner Area -->
      <section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                <%= @quiz.title %>
              </h1> 
              <p class="text-white link-nav"><%= link_to 'Home', root_path %>  <span class="lnr lnr-arrow-right"></span> <%= @quiz.course.title %> <span class="lnr lnr-arrow-right"></span> <%= @quiz.title %> </p>
            </div>  
          </div>
        </div>
      </section>
      <!-- End banner Area -->

<!-- Start course-details Area -->
      <section class="course-details-area pt-120">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <% if notice %>
                  <div class="alert alert-success text-center" role="alert"><%= notice %></div>
              <% end %>
              <% if alert %>
                  <div class="alert alert-danger text-center" role="alert"><%= alert %></div>
              <% end %>
             <%= form_for @quiz, url: quiz_submit_quiz_path, method: "post" do |f| %>
              <% @quiz.questions.each do |question| %>
                <div class="mb-10"><h4><%= question.question %></h4></div>
                <div class="row">
                  <% question.answers.each do |answer| %>
                    <div class="col-md-12">
                      <%= radio_button_tag "questions[#{question.id}][answers]", "#{answer.id}" %>
                      <%= f.hidden_field "question", value: question.id %>
                      <%= f.label answer.answer %>
                    </div>
                    <% end %>
                </div>
                <hr>
              <% end %>
              <%= f.button :submit, class: "btn btn-primary" %>
             <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>  
  
      </section>
      <!-- End course-details Area -->
      

