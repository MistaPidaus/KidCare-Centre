 <div class="card nested-fields answer-container">
  	<div class="card-body">

	  <%= f.input :answer, label: 'Answer', required: true, input_html: {class: "form-control"} %>
	  <%= f.input :correct, as: :hidden, input_html: {class: "quiz_questions_answers_correct"} %>

	<%= link_to_remove_association raw('<i class="fa fa-trash-o"></i>'), f, class: 'btn btn-default btn-sm', data: {toggle: "tooltip", placement: "left" }, title:"Remove answer" %>
		
	<%= button_tag raw('<i class="fa fa-check fa-green success"></i>'), type: 'button', class: 'btn btn-default btn-sm toggle-correct', data: {toggle: "tooltip", placement: "right", action: 'toggle-correct-answer' }, title:"Set as the correct answer"  %> 

	</div>
</div>