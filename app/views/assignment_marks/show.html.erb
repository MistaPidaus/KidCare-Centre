      <!-- start banner Area -->
      <section class="banner-area relative about-banner" id="home"> 
        <div class="overlay overlay-bg"></div>
        <div class="container">       
          <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
              <h1 class="text-white">
                <%= @assignment.title %>
              </h1> 
              <p class="text-white link-nav"><%= link_to 'Home', root_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to 'Courses', courses_path %>  <span class="lnr lnr-arrow-right"></span>  <%= link_to @assignment.title, view_mycourse_path(@assignment) %></p>
            </div>  
          </div>
        </div>
      </section>
      <!-- End banner Area -->

<!-- Start course-details Area -->
      <section class="course-details-area pt-120">
        <div class="container">
          <div class="row">
          	<div class="col-lg-12">
          		<% if notice %>
	                <div class="alert alert-success text-center" role="alert"><%= notice %></div>
	            <% end %>
	            <% if alert %>
	                <div class="alert alert-danger text-center" role="alert"><%= alert %></div>
	            <% end %>

	            <% if @submission.present? %>

				<p>
				  <strong>File:</strong>
				  <% if @submission.marks.present? %>
				  	<%= @submission.file %>
				  	<% else %>
				  	Not submit yet
				  <% end %>
				</p>

				<p>
				  <strong>Marks:</strong>
				  	<% if @submission.marks.present? %>
				  		<%= @submission.marks %>
				  		<% else %>
				  		Not Grade Yet
				  	<% end %>
				</p>

				<%= link_to 'Edit', edit_assignment_mark_path(@submission), class: "btn btn-primary" %>

				<% end %>

				

				<%= link_to 'Add new submission', new_assignment_mark_path(@assignment), class: "btn btn-primary" if @submission.blank? %>


				<%= link_to 'Back', view_mycourse_path(@assignment) %>

          	</div>
          </div>
        </div>  

      </section>
      <!-- End course-details Area -->
      

      <!-- Start popular-courses Area --> 
      <section class="popular-courses-area section-gap courses-page">
      </section>
      <!-- End popular-courses Area -->         

